# =============================================================================
# DURUSUNA BACKEND - LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# Copy this file to .env and update the values as needed
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=durusuna_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis123

# =============================================================================
# JWT SECRETS
# =============================================================================
# For production, generate strong secrets with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=dev-refresh-secret-change-for-production
JWT_REFRESH_EXPIRE=30d

# =============================================================================
# SEVALLA/CLOUDFLARE R2 STORAGE CONFIGURATION
# =============================================================================
# Replace with your actual Sevalla credentials from the dashboard
S3_ENDPOINT=https://mystoragedummy.r2.cloudflarestorage.com
S3_ACCESS_KEY=your_sevalla_access_key_here
S3_SECRET_KEY=your_sevalla_secret_key_here
S3_BUCKET_NAME=durusuna-test-kog64
S3_REGION=apac

# =============================================================================
# PGADMIN CONFIGURATION (OPTIONAL - for database management)
# =============================================================================
PGADMIN_EMAIL=admin@durusuna.local
PGADMIN_PASSWORD=admin123 