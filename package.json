{
  "name": "durusuna-backend",
  "version": "1.0.0",
  "description": "Backend API for Durusuna school communication app",
  "main": "src/server.ts",
  "scripts": {
    "start": "bun src/server.ts",
    "dev": "bun --watch src/server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --ci --coverage",
    "test:debug": "bun --inspect-brk --test src/",
    "test:service": "bun test tests/userService.test.ts",
    "test:services": "bun test tests/*Service.test.ts",
    "test:legacy": "bun test tests/*.test.js",
    "test:new": "bun test tests/*.test.ts",
    "lint": "eslint src/",
    "db:migrate": "bun run knex migrate:latest",
    "db:seed": "bun run knex seed:run",
    "db:rollback": "bun run knex migrate:rollback",
    "db:rollback:all": "bun run knex migrate:rollback --all",
    "db:reset": "bun run db:rollback:all && bun run db:migrate && bun run db:seed",
    "db:fresh": "bun run db:reset"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "sharp": "^0.32.4",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "school",
    "education",
    "chat",
    "communication",
    "api",
    "nodejs",
    "express",
    "socketio"
  ],
  "author": "Durusuna Team",
  "license": "MIT"
}
